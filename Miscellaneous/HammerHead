    //Code Portion only to control the DS3235-270
    #include <msp430.h> 
    //Using Timer B0.2
    void main(void)
    {
        WDTCTL = WDTPW | WDTHOLD;   // Stop watchdog timer
        
        PM5CTL0 &= ~LOCKLPM5;   //Low-Power Mode5
        
        //P3.6 for PWM output using Timer B0.2
        P3DIR |= BIT6;              // Set P3.6 as output
        P3SEL1 |= BIT6;             // Select Timer function
        P3SEL0 &= ~BIT6;            // P3.6 = TB0.2 output
        
        // PWM of 50Hz
        TB0CCR0 = 20000 - 1;        // PWM period (20ms at 1MHz)
        TB0CCTL2 = OUTMOD_7;      
        TB0CTL = TBSSEL__SMCLK | MC__UP | TBCLR;  // SMCLK, up mode, clear timer
        
        while(1) { // Alternate between starting and 2nd position to mimic hammering motion
            TB0CCR2 = 1000;          // 0 degrees
            __delay_cycles(1500000);
            
            TB0CCR2 = 2300;          // 90 degrees
            __delay_cycles(1500000);
            
            TB0CCR2 = 1000;          // 0 degrees
            __delay_cycles(1500000);
        }
    }
